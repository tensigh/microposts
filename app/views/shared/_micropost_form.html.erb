<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= t(:store_name) %>
  <div class="field">
    <%= f.text_field :storename %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: t(:compose_new_post) %>
  </div>  
  <!--- :content is the actual form - there's only one field --->
  <%= f.submit t(:post), class: "btn btn-primary" %>
  <% end %>