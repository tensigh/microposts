<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <div class="row">
      <div class="col-sm-2">
       Name
      </div>
      <div class="col-sm-10">
        <%= @user.name %>
      </div>
      <div class="row">
        <div class="col-sm-2">
          Screen Name
        </div>
      <div class="col-sm-10">
        <%= @user.screen_name %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        Email
      </div>
      <div class="col-sm-10">
        <%= @user.email %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        Region
      </div>
      <div class="col-sm-10">
        <%= @user.region %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        Phone
      </div>
      <div class="col-sm-10">
        <%= @user.phone_number %>
      </div>
    </div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
