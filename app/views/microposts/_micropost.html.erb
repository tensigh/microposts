<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="content"><%= micropost.storename %></span>
  <span class="content"><%= micropost.address %></span>
  <span class="content"><%= micropost.city %> <%= micropost.state %> <%= micropost.zip %></span>
  <span class="content"><%= micropost.productname %> - <%= micropost.productprice %> <%= t(:store_rating) %> <%= micropost.rating %></span>
  <span class="timestamp">
    <%= t('posted_time_ago', posted_ago: time_ago_in_words(micropost.created_at)) %>
    <% if current_user == micropost.user %>
      <%= link_to t(:delete_post), micropost, method: :delete,
                                       data: { confirm: t(:confirm_delete) } %> 
    <% end %>
  </span>
</li>